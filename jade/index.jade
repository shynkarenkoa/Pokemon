doctype html
html(lang='en')
  head
    title Pokemons
    meta(charset="utf-8")
    script(src='./script/test.js' defer)
    link(rel='stylesheet', type='text/css', href='./css/pokemon.css') 
  body
    header
      h1 Pokedex
    main
      section.list
        ul
          - for (var i = 0; i < 12; i++)
            li 
              span(onclick="select(this)")
                img
      sidebar
        div
          img#pic
          h2 TEST
          table(cellpadding="5px")
            mixin tabl(name)
              tr
                td(align="center", width="70%")= name
                td(align="center", id= name)
            +tabl("Type")
            +tabl("Attack")
            +tabl("Defense")
            +tabl("HP")
            +tabl("SP Attack")
            +tabl("SP Defense")
            +tabl("Speed")
            +tabl("Weight")
            +tabl("Total moves") 
    footer
      button(onclick="change()") 
        h2 Load More        
    
    